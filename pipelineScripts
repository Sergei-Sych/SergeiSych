pipeline {
    agent any 
    stages {
        stage('git') {
            steps {
               git branch: 'main', url: 'https://github.com/Sergei-Sych/SergeiSych.git'
            }
        }
        stage('Run Jmeter Test') {
        steps { 
               bat 'C:/Users/Siarhei_Sych/Downloads/apache-jmeter-5.4.1/bin/jmeter.bat -n -t C:/Users/Siarhei_Sych/Downloads/apache-jmeter-5.4.1/bin/task/flood_challenger.jmx -l C:/Users/Siarhei_Sych/Downloads/apache-jmeter-5.4.1/bin/task/flood_challenger.jtl'
            }
        }
        stage('Test Report') {
        steps {
            bat 'gradle test'
        }
        post {
            always {
                script {
                    def moduleNames = ["app", "core", ...]
                    for(i=0; i<moduleNames.size(); i++ ) {
                        publishHTML target: [
                            allowMissing:false,
                            alwaysLinkToLastBuild: false,
                            keepAll:true,
                            reportDir: moduleNames[i] + 'C:/Users/Siarhei_Sych/Downloads/apache-jmeter-5.4.1/bin/report_flood',
                            reportFiles: 'index.html',
                            reportName: 'Test Report:' + moduleNames[i]
                        ]
                    }
                }   
            }
        }
    }
    }
}
